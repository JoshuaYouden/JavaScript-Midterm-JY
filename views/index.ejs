<html lang="en">
  <head>
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="./styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
  </head>
  <body>
    <main class="main-content">
      <h1>Restaurant Menus</h1>
      <h2>Please choose your restaurant to get the menu</h2>
      <form action="/restaurant" method="GET">
        <label for="restaurantId">Select a restaurant:</label>
        <select name="restaurantId" id="restaurantId">
          <% restaurants.forEach((restaurant) => { %>
          <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
          <% }) %>
        </select>
        <button type="submit">Get the menu!</button>
      </form>
      <h2>Random Menu Item!</h2>
      <p>Restaurant: <%= restaurantName %></p>
      <p><%= randomMenuItem %></p>
      <p>Price: <%= randomMenuItemPrice %></p>
      <p>Cuisine: <%= randomCuisine %></p>
      <p>
        Special: <%= randomMenuItemSpecial ? "Daily Special!" : "Not a Special!"
        %>
      </p>
      <h3><a href="/alerts">View Menu Alerts</a></h3>
    </main>
  </body>
</html>
